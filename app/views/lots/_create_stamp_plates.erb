<%= form_tag(lot_qcables_path(lot), {class: 'form-horizontal'}) do %>
  <%= render :partial => 'form_elements/user_swipecard' %>

  <div class="form-group">
    <label for="plate_number" class="col-sm-5 control-label">Number of plates</label>
    <div class="col-sm-7">
      <input type="number" class="form-control" id="plate_number" placeholder="0" min=0 step=1 required="required">
    </div>
  </div>
  <div class="form-group">
    <label for="barcode_printer" class="col-sm-5 control-label">Barcode Printer</label>
    <div class="col-sm-7">
      <select class="form-control" required="required" id="barcode_printer">
        <option>d304bc</option>
        <option>d304bc</option>
        <option>d304bc</option>
        <option>d304bc</option>
        <option>d304bc</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <span class="col-sm-5"></span>
    <div class="col-sm-7">
      <input type="submit" class="form-control btn-success" id="submit" value="Create Plates and Print Barcodes">
    </div>
  </div>
</form>
