<%= form_tag(lot_qcables_path(lot), {class: 'form-horizontal'}) do %>
  <%= render :partial => 'form_elements/user_swipecard' %>

  <div class="form-group">
    <label for="plate_number" class="col-sm-5 control-label">Number of plates</label>
    <div class="input-group col-sm-6">
      <span class="input-group-addon glyphicon glyphicon-plus"></span>
      <input type="number" class="form-control" id="plate_number" name="plate_number" placeholder="0" min=0 step=1 required="required">
    </div>
  </div>

  <div class="form-group">
    <label for="barcode_printer" class="col-sm-5 control-label">Barcode Printer</label>
    <div class="input-group col-sm-6">
      <span class="input-group-addon glyphicon glyphicon-print"></span>
      <select class="form-control" required="required" id="barcode_printer" name="barcode_printer">
        <% each_barcode_printer('96 Well Plate') do |name,uuid| -%>
          <option value='<%= uuid %>'><%= name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <span class="col-sm-5"></span>
    <div class="col-sm-6">
      <button type="submit" class="form-control btn-success" id="submit" value="Create Plates and Print Barcodes"><span class='glyphicon glyphicon-print'></span> Create Plates and Print Barcodes</button>
    </div>
  </div>

<% end #Form %>
