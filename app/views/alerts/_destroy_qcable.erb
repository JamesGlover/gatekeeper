<!-- Modal -->
<div class="modal fade" id="destroyQcable" tabindex="-1" role="dialog" aria-labelledby="destroyQcableLabel" aria-hidden="true" data-focus='qcable_barcode_to_destroy'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="destroyQcableLabel">Destroy Plate</h4>
      </div>
      <%= form_tag asset_path, :method => 'delete' do %>
        <div class="modal-body">

          <div class="form-group">
            <label for="idt_barcode" class="control-label">Plate barcode</label>
            <div class="input-group">
              <span class="input-group-addon"><span class='glyphicon glyphicon-barcode'></span></span>
              <input type="text" class="form-control" id="qcable_barcode_to_destroy" name="qcable_barcode_to_destroy" placeholder="Scan barcode or input ean13" required="required">
            </div>
          </div>

          <div class="form-group">
            <label for="user_swipecard" class="control-label">User swipecard</label>
            <div class="input-group">
              <span class="input-group-addon"><span class='glyphicon glyphicon-user'></span></span>
              <input type="text" class="form-control" id="user_swipecard" name="user_swipecard" placeholder="Touch card against card-reader" required="required">
            </div>
          </div>

          <div class="form-group">
            <button type="submit" class="form-control btn-success" id="submit" value="Destroy Plate"><span class='glyphicon glyphicon-trash'></span> Destroy Plate</button>
            </div>
          </div>


        </div>
      <% end %>
    </div>
  </div>
</div>
