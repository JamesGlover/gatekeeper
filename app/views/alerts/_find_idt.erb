<!-- Modal -->
<div class="modal fade" id="findIDT" tabindex="-1" role="dialog" aria-labelledby="findIDTLabel" aria-hidden="true" data-focus='idt_barcode_to_find'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="findIDTLabel">View IDT Batch</h4>
      </div>
      <form>
        <div class="modal-body">
          <div class="form-group">
            <label for="idt_barcode" class="control-label">IDT Barcode</label>
            <div class="input-group">
              <span class="input-group-addon"><span class='glyphicon glyphicon-barcode'></span></span>
              <input type="text" class="form-control" id="idt_barcode_to_find" placeholder="Scan barcode or input IDT" required="required">
              <span class="input-group-btn">
                <input class="btn btn-default" type="submit" value='Find'>
              </span>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
